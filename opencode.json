{
	"$schema": "https://opencode.ai/config.json",
	"theme": "tokyonight",
	"model": "anthropic/claude-sonnet-4-5",
	"permission": {
		"edit": "ask",
		"bash": {
			"git commit": "ask"
		}
	},
	"mcp": {
		"chrome-devtools": {
			"enabled": true,
			"type": "local",
			"command": [
				"chrome-devtools-mcp",
				"--executablePath=/usr/bin/chromium",
				"--headless=true",
				"--isolated"
			]
		}
	}
}