---
import "@/styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} - ENV26</title>
  </head>

  <body data-sidebar="closed">
    <nav id="top-nav">
      <button data-sidebar-state="open">Toggle Sidebar</button> main nav bro
    </nav>

    <div id="layout">
      <aside>
        <button data-sidebar-state="closed">Toggle Sidebar</button>
        <p>Sidebar via slot</p>
      </aside>

      <main>
        <slot />
      </main>
    </div>

    <footer>(c)2005</footer>
  </body>
</html>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    for (const el of document.querySelectorAll("[data-sidebar-state]")) {
      el.addEventListener("click", (e: Event) => {
        e.preventDefault();
        document.body.dataset.sidebar = (
          e.target as HTMLElement
        ).dataset.sidebarState;
      });
    }

    // Handle clicks on the overlay (body::after) to close sidebar
    document.body.addEventListener("click", (e: Event) => {
      const target = e.target as HTMLElement;

      // Only close if clicking directly on body (the overlay)
      // and sidebar is open and not clicking on sidebar or its children
      if (
        target === document.body &&
        document.body.dataset.sidebar === "open"
      ) {
        document.body.dataset.sidebar = "closed";
      }
    });
  });
</script>
