---
import Sidebar from "@/components/Sidebar.astro";
import "@/styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} - ENV26</title>
  </head>

  <body data-is-sidebar-open="false">
    <nav id="top-nav">
      <button data-sidebar-toggle>Toggle Sidebar</button> main nav bro
    </nav>

    <div id="layout">
      <Sidebar />
      <main id="content">
        <slot />
      </main>
    </div>

    <footer id="footer">(c)2005</footer>
  </body>
</html>
